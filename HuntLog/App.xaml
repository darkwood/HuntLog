<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HuntLog.App">
<Application.Resources>
    <ResourceDictionary Source="/Styles/LightTheme.xaml"/>

    <DataTemplate x:Key="GroupHeaderTemplate">
        <ViewCell>
             <StackLayout BackgroundColor="{DynamicResource GroupHeaderBgColor}">
                <Label Text ="{Binding Name}"
                        Margin="10 20"
                        TextColor="{DynamicResource GroupHeaderTextColor}"
                        />
            </StackLayout>
        </ViewCell>
    </DataTemplate>
    
</Application.Resources>
</Application>