<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="HuntLog.AppModule.Hunts.EditHuntView"
             xmlns:Converters="clr-namespace:HuntLog.Converters"       
             xmlns:cells="clr-namespace:HuntLog.Cells;assembly=HuntLog"
             xmlns:controls="clr-namespace:HuntLog.Controls;assembly=HuntLog"
             Title="{Binding Title}">
    
    <ContentPage.ToolbarItems>
        <!--<ToolbarItem Priority="0" Text="Avbryt" Command="{Binding CancelCommand}" />-->
        <ToolbarItem Priority="1" Text="Lagre" Command="{Binding SaveCommand}"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
            
        <controls:ExtendedTableView HasUnevenRows="true" Intent="Form">
            <TableRoot>
                
                <TableSection Title="">
                    <cells:ImageHeaderCell HeightRequest="200" ImagePath="{Binding ImagePath}" Command="{Binding ImageCommand}" />
                    <EntryCell Label="Sted" Text="{Binding Location}" />
                    <cells:ExtendedTextCell Text="Bilde" Text2="{Binding ImagePath}" ImageSource="{Binding ImageSource}" Command="{Binding ImageCommand}" />
                    <cells:MapCell Text="Posisjon" Latitude="{Binding Latitude}" Longitude="{Binding Longitude}" Command="{Binding PositionCommand}" />
                      
                    <cells:ExtendedTextCell Text="Jegere" Text2="{Binding HuntersNames}" />
                    <cells:ExtendedTextCell Text="Hunder" Text2="{Binding DogsNames}" />
                    <cells:ExtendedTextCell Text="Dato fra" Text2="{Binding DateFrom}" />
                     <cells:ExtendedTextCell Text="Dato til" Text2="{Binding DateTo}" />
                    <EntryCell Label="Notes" Text="{Binding Notes}" />
                    
                </TableSection>

                <TableSection Title="">
                    <ViewCell>
                        <Button 
                            Text="Slett" 
                            StyleClass="PrimaryButton"
                            Command="{Binding DeleteCommand}"
                            IsVisible="{Binding IsNew, Converter={Converters:InverseBoolConverter}}"
                        />
                        
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </controls:ExtendedTableView>
        
    </ContentPage.Content>
</ContentPage>
