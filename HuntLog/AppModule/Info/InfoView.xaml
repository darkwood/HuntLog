<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="HuntLog.AppModule.Info.InfoView"
             Title="Om Jaktloggen">
    <ContentPage.Content>
        <Grid VerticalOptions="FillAndExpand" 
              HorizontalOptions="FillAndExpand"
              BackgroundColor="{StaticResource TableBg}">
            
            <Image Source="{Binding ImageSource}"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand"
                   Aspect="AspectFill" />

            <StackLayout Padding="20">
                <Label Text="Jaktloggen er utviklet av Tore Mørkved på frivillig basis." />
                <Label Margin="0,10"
                       Text="Tilbakemeldinger settes pris på. Ris og Ros gjør du her, rett fra appen! Er du veldig  fornøyd, gi appen masse stjerner i App Store :)"
                       />

                <WebView x:Name="webView"
                         BackgroundColor="Yellow"
                         VerticalOptions="FillAndExpand"
                         />
            </StackLayout>
            


        </Grid>
    </ContentPage.Content>
</ContentPage>
